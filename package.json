{
  "name": "electron-helloworld",
  "version": "1.0.0",
  "description": "Hello World! App",
  "main": "app/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "make": "electron-forge make",
    "start:forge": "electron-forge start",
